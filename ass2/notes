3:38:30

just convert to seconds bro
   
// CONVERTING TO WHOLE NUMBERS

// convert hours to int
minute += remainder(hour, 1) * 60;
hour = (int)hour / 1;

// convert minutes to int
second += remainder(minute, 1) * 60;
minute = (int)minute / 1;

// convert seconds to int



// REDISTRIBUTING EXCESS

// add excess seconds to minutes
minute += second / 60;
second = remainder(second, 60);

// add excess minutes to hours
hour += minute / 60;
minute = remainder(minute, 60);


// FIXING NEGATIVE NUMBERS

// while minutes are negative
while (minute < 0) 
{  // if hours are positive
   if (hour > 0)
   {  // borrow an hour and add 60 minutes
      hour--;
      minute += 60;
   }
}

// while seconds are negative
while (second < 0)
{  // if minutes are positive
   if (minute > 0)
   {  // borrow a minute and add 60 seconds
      minute--;
      second += 60;
   }
}

